@using EntityLayer.Concrete
@model Category
@{
    ViewData["Title"] = "Kategori Güncelleme";
}
<h1>@ViewData["Title"]</h1>



@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post, new { @class = "form-group" }))
{
    <div>
        <label>Kategori Id</label>
        @Html.TextBoxFor(m => m.CategoryId, new { @class = "form-control",name="CategoryId",disabled="disabled"})
    </div>
    <br />
    <div>
        <label>Kategori Adı</label>
    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control",name="CategoryName" })
    </div>
    <br />
    <button class="btn btn-success" type="submit">Kategori Güncelle</button>
}
